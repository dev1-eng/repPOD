	ВсегоСтрок = Таблица.Количество();
	Для Счетчик = 1 По ВсегоСтрок Цикл
		
		СтрокаТаблицы = Таблица[ВсегоСтрок- Счетчик];
		ЗаполнитьЗначенияСвойств(Отбор, СтрокаТаблицы);
		НайденныеСтроки = ТаблицаПолуфабрикатов.НайтиСтроки(Отбор);
		Если НайденныеСтроки.Количество() > 0 Тогда
			
			КоличествоРаспределить = Мин(НайденныеСтроки[0].Количество, СтрокаТаблицы[ИмяПоляКоличество]);
			НайденныеСтроки[0].Количество = НайденныеСтроки[0].Количество - КоличествоРаспределить;
			СтрокаТаблицы[ИмяПоляКоличество] = СтрокаТаблицы[ИмяПоляКоличество] - КоличествоРаспределить;
			Если СтрокаТаблицы[ИмяПоляКоличество] = 0 Тогда
				Таблица.Удалить(СтрокаТаблицы);
			КонецЕсли;
			
