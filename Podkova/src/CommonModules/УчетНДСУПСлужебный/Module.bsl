	ИначеЕсли СтавкаНДС = Перечисления.СтавкиНДС.НДС10 Тогда
		РасчетнаяСтавка = Перечисления.СтавкиНДС.НДС10_110;
	Иначе
		РасчетнаяСтавка = СтавкаНДС;
	КонецЕсли;
	
	Возврат РасчетнаяСтавка;
	
