	Условие.property = "withDelayed";
	Условие.value = Ложь;
	Запрос.query.conditions.Добавить(Условие);
	
	Ответ = Прокси.execute(Запрос);
	Попытка
		ИнтеграцияС1СДокументооборот.ПроверитьВозвратВебСервиса(Прокси, Ответ);
	Исключение
		Возврат Ложь;
	КонецПопытки;

	Возврат (Ответ.items.Количество() <> 0);

КонецФункции

