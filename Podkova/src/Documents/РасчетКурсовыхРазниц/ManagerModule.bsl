	Запрос.УстановитьПараметр("МассивСсылок", МассивСсылок);
	МассивКлючейОрганизации = Запрос.Выполнить().Выгрузить().ВыгрузитьКолонку("Ссылка");
	
	Возврат МассивКлючейОрганизации;
	
