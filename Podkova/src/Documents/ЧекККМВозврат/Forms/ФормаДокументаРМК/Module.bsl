					ЭлементБлокировки.Режим = РежимБлокировкиДанных.Исключительный;
					ЭлементБлокировки.УстановитьЗначение("ДокументОснование", РеквизитыФискальнойОперацииКассовогоУзла.ДокументОснование);
				КонецЕсли;	
			КонецЕсли;
		КонецЕсли;
		
		Блокировка.Заблокировать();
		
		Если НужноЗаписатьФискальнуюОперацию Тогда
			МенеджерОборудованияВызовСервера.ЗаписатьФискальнуюОперацию(РеквизитыФискальнойОперацииКассовогоУзла);
		КонецЕсли;	
		
