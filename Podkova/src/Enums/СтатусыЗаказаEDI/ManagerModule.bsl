Функция ТаблицаСтатусовКлиентскогоAPI()
	
	Результат = ТаблицаСоответствийЗначений();
	
	ДобавитьСтрокуСоответствия(Результат, Перечисления.СтатусыЗаказаEDI.ПустаяСсылка(), СтатусБезСтатуса());
	ДобавитьСтрокуСоответствия(Результат, Перечисления.СтатусыЗаказаEDI.СогласуетсяПоставщиком, СтатусСогласуетсяПродавцом());
	ДобавитьСтрокуСоответствия(Результат, Перечисления.СтатусыЗаказаEDI.СогласуетсяПокупателем, СтатусСогласуетсяПокупателем());
	ДобавитьСтрокуСоответствия(Результат, Перечисления.СтатусыЗаказаEDI.Выполняется, СтатусВыполняется());
	ДобавитьСтрокуСоответствия(Результат, Перечисления.СтатусыЗаказаEDI.ИзмененияПодтверждаютсяПоставщиком, СтатусИзмененияПодтверждаютсяПродавцом());
	ДобавитьСтрокуСоответствия(Результат, Перечисления.СтатусыЗаказаEDI.ИзмененияПодтверждаютсяПокупателем, СтатусИзмененияПодтверждаютсяПокупателем());
	ДобавитьСтрокуСоответствия(Результат, Перечисления.СтатусыЗаказаEDI.ПодтверждаетсяВыполнение, СтатусПодтверждаетсяВыполнение());
	ДобавитьСтрокуСоответствия(Результат, Перечисления.СтатусыЗаказаEDI.ВыполнениеОтклонено, СтатусВыполнениеОтклонено());
	ДобавитьСтрокуСоответствия(Результат, Перечисления.СтатусыЗаказаEDI.Выполнен,СтатусВыполнен());
	ДобавитьСтрокуСоответствия(Результат, Перечисления.СтатусыЗаказаEDI.ОтменаПодтверждаетсяПоставщиком, СтатусИзмененияПодтверждаютсяПродавцом());
	ДобавитьСтрокуСоответствия(Результат, Перечисления.СтатусыЗаказаEDI.ОтменаПодтверждаетсяПокупателем, СтатусОтменаПодтверждаетсяПокупателем());
	ДобавитьСтрокуСоответствия(Результат, Перечисления.СтатусыЗаказаEDI.Отменен, СтатусОтменен());
	
	Возврат Результат;
	
КонецФункции

Процедура ДобавитьСтрокуСоответствия(СоответствиеЗначений, ЗначениеИБ, ЗначениеСервиса)
	
	НоваяСтрока = СоответствиеЗначений.Добавить();
	
	НоваяСтрока.ЗначениеСервиса = ЗначениеСервиса;
	НоваяСтрока.ЗначениеИБ = ЗначениеИБ;
	
КонецПроцедуры

Функция ТаблицаСоответствийЗначений()
	
	Результат = Новый ТаблицаЗначений;
	
	Результат.Колонки.Добавить("ЗначениеСервиса");
	Результат.Колонки.Добавить("ЗначениеИБ");
	
	Возврат Результат ;
	
КонецФункции

Функция СоответствиеПоЗначениюСервиса(СоответствиеЗначений, ЗначениеДляПоиска)
	
	Результат = СоответствиеЗначений.Найти(ЗначениеДляПоиска, "ЗначениеСервиса");
	
	Если Результат = Неопределено Тогда
		Возврат Неопределено;
	Иначе
		Возврат Результат.ЗначениеИБ;
	КонецЕсли;
	
КонецФункции

Функция СоответствиеПоЗначениюИБ(СоответствиеЗначений, ЗначениеДляПоиска)
	
	Результат = СоответствиеЗначений.Найти(ЗначениеДляПоиска, "ЗначениеИБ");
	
	Если Результат = Неопределено Тогда
		Возврат Неопределено;
	Иначе
		Возврат Результат.ЗначениеСервиса;
	КонецЕсли;
	
КонецФункции

